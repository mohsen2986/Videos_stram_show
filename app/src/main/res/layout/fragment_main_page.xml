<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="onClickHandler"
            type="com.videostreamshows.ui.utils.OnClickHandler"
            />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fra_main_contaner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".ui.fragment.mainPage.MainPageFragment"
        >
        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/fra_main_slider"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            app:sliderCircularHandlerEnabled="true"
            app:sliderStartAutoCycle="true"
            app:sliderScrollTimeInSec="2"
            app:sliderIndicatorGravity="bottom|start"
            app:sliderIndicatorSelectedColor="@color/colorAccent"
            app:layout_constraintTop_toTopOf="parent"

            />
        <!--    app:sliderIndicatorUnselectedColor="@color/red_400"-->

        <TextView
            android:id="@+id/fra_main_movie_trending_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top trending movies"
            android:textColor="#fff"
            android:textSize="23sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="17dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fra_main_slider"
            />
        <ImageButton
            android:id="@+id/fra_main_top_movies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_right"
            android:layout_marginEnd="10dp"
            android:onClick="@{onClickHandler::onClick}"
            app:layout_constraintTop_toTopOf="@id/fra_main_movie_trending_title"
            app:layout_constraintBottom_toBottomOf="@id/fra_main_movie_trending_title"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fra_main_rv_movie_trending"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:transitionGroup="true"
            app:layout_constraintTop_toBottomOf="@id/fra_main_movie_trending_title"
            />
        <ProgressBar
            android:id="@+id/fra_main_movie_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/fra_main_rv_movie_trending"
            app:layout_constraintBottom_toBottomOf="@id/fra_main_rv_movie_trending"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/fra_main_tv_trending_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top trending tv shows"
            android:textColor="#fff"
            android:textSize="23sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="17dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fra_main_rv_movie_trending"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_right"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/fra_main_tv_trending_title"
            app:layout_constraintBottom_toBottomOf="@id/fra_main_tv_trending_title"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fra_main_rv_tv_trending"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/fra_main_tv_trending_title"
            />
        <ProgressBar
            android:id="@+id/fra_main_tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/fra_main_rv_tv_trending"
            app:layout_constraintBottom_toBottomOf="@id/fra_main_rv_tv_trending"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/fra_main_genres_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Genres"
            android:textColor="#fff"
            android:textSize="23sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="17dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fra_main_rv_tv_trending"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/fra_main_tab_layout_genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:tabIndicatorHeight="18dp"
            app:tabIndicatorColor="@color/colorAccent"
            app:tabIndicator="@drawable/indicator"
            app:tabIndicatorGravity="center"
            app:tabMode="scrollable"
            app:layout_constraintTop_toBottomOf="@id/fra_main_genres_title"
            />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fra_main_rv_genre_movies"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="17dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/fra_main_tab_layout_genres"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        <ProgressBar
            android:id="@+id/fra_main_genre_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/fra_main_rv_genre_movies"
            app:layout_constraintBottom_toBottomOf="@id/fra_main_rv_genre_movies"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>