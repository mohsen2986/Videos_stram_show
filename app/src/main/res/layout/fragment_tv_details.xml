<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="tv"
            type="com.videostreamshows.data.remote.model.TvDetails"
            />
        <variable
            name="poster"
            type="java.lang.String"
            />
        <variable
            name="onClickHandler"
            type="com.videostreamshows.ui.utils.OnClickHandler"
            />
        <variable
            name="loading"
            type="java.lang.Boolean"
            />
        <import type="android.view.View"/>
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MovieDetailActivity"
        android:background="@color/colorPrimary"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.constraintlayout.widget.Group
                android:id="@+id/row_item_vertical_view_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="
                          fra_tv_loading_bg
                        , fra_tv_loading
                        , fra_tv_loading_txt
                        "
                android:visibility="@{loading ? View.VISIBLE : View.INVISIBLE}"
                />
            <View
                android:id="@+id/fra_tv_loading_bg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:elevation="5dp"
                android:alpha="0.93"
                android:background="@drawable/loading_bg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <ProgressBar
                android:id="@+id/fra_tv_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:id="@+id/fra_tv_loading_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loding"
                android:textSize="27dp"
                android:textColor="#fff"
                android:elevation="10dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/fra_tv_loading"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <ImageView
                android:id="@+id/fra_tv_details_cover"
                android:layout_width="wrap_content"
                android:layout_height="245dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <ImageView
                android:id="@+id/fra_tv_details_boarder"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/gradient_bg"
                android:loadImage="@{tv.backdropPath}"
                app:layout_constraintBottom_toBottomOf="@+id/fra_tv_details_cover"
                app:layout_constraintEnd_toEndOf="@+id/fra_tv_details_cover"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/fra_tv_details_cover"
                />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fra_tv_details_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/ic_play_arrow_black_24dp"
                android:onClick="@{onClickHandler::onClick}"
                app:layout_constraintBottom_toBottomOf="@+id/fra_tv_details_cover"
                app:layout_constraintEnd_toEndOf="@+id/fra_tv_details_cover"
                app:layout_constraintStart_toStartOf="@+id/fra_tv_details_cover"
                app:layout_constraintTop_toTopOf="@+id/fra_tv_details_cover"
                />

            <ImageView
                android:id="@+id/fra_tv_details_poster"
                android:layout_width="125dp"
                android:layout_height="175dp"
                android:layout_marginStart="16dp"
                android:scaleType="centerCrop"
                android:transitionName="imageView"
                android:loadImage="@{poster}"
                app:layout_constraintBottom_toBottomOf="@+id/fra_tv_details_cover"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fra_tv_details_cover"

                />

            <TextView
                android:id="@+id/fra_tv_details_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="@{tv.name}"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fra_tv_details_poster"
                app:layout_constraintTop_toBottomOf="@+id/fra_tv_details_cover" />

            <TextView
                android:id="@+id/fra_tv_details_description"
                android:lineSpacingExtra="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="@{tv.overview}"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fra_tv_details_poster"
                />
            <TextView
                android:id="@+id/fra_tv_details_casts_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/indicator"
                android:backgroundTint="#fff"
                android:text="Casts"
                android:padding="10dp"
                android:paddingStart="15dp"
                android:textStyle="bold"
                android:textColor="@color/text_light_blue"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/fra_tv_details_description"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fra_tv_details_rv_casts"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginTop="10dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/fra_tv_details_casts_title"
                />

            <TextView
                android:id="@+id/fra_tv_details_seasons_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/indicator"
                android:backgroundTint="#fff"
                android:text="Seasons"
                android:padding="10dp"
                android:paddingStart="15dp"
                android:textStyle="bold"
                android:textColor="@color/text_light_blue"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/fra_tv_details_rv_casts"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fra_tv_details_rv_seasons"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginTop="20dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/fra_tv_details_seasons_title"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>